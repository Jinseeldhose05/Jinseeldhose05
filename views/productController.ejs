<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <style>

    .img1{

        height: 100px;
        width: 100px;

    }

    .DE{

        width: 100px;
        
}

    .DE a{

        width: 100px;
        color: #217c1d;
        text-decoration: none;

    }

        table {
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #770909;
            padding: 10px;
            text-align: center;
            background-color: #541d1d57;
        }
        th {
            background-color: #611a1a;
            color: white;
        }
        img {
            width: 80px;
            height: 80px;
            object-fit: cover;
        }

        .descri{

            text-align: left;

        }

    </style>
</head>
<body>
    <h2 class="product-head">Product List</h2>
    <button onclick="location.href='/add-product'" class="add-product-button">Add Product</button>
    
    <table border="1">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        
        <% if (products.length > 0) { %>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.name %></td>
                    <td>â‚¹<%= product.price %></td>
                    <td class="descri"><%= product.description %></td>
                    <td class="img1">
                        <% if (product.image) { %>
                            <img src="/uploads/<%= product.image %>" alt="Product Image">
                        <% } else { %>
                            No Image
                        <% } %>
                    </td>
                    <td class="DE">
                        <a href="/edit-product/<%= product._id %>">Edit</a> |
                        <a href="/delete-product/<%= product._id %>" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                    </td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="5">No products available</td>
            </tr>
        <% } %>
    </table>
</body>
</html>
