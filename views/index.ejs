<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
  </head>
  <body>
    <div class="hello">
      <div class="left">
        <img src="/images/apple.png" alt="Logo" class="photo">
        <h1><a href="/"><%= message %></a></h1>
      </div>
      <div class="rights">
        <input type="search" placeholder="search.." class="search">
        <button class="login">Login</button>
        <img src="/images/more.png" alt="More options" class="more">
      </div>
    </div>
    <div>
    <div class="sliding-text">
      <p><%= sliding_text %></p>
    </div>
    <div class="slider">
      <div>
        <img src="/images/image1.png" alt="first image">
        <div class="poster">
          <h1>JINSE ELDHOSE</h1>
          <a>Buy Now</a>
        </div>
      </div>
    </div>
  </div>
    <div class="products">
      <h1 class="trending-products">Trending products</h1>
      <div class="new-products">
        <% if (products && products.length > 0) { %>
          <% products.forEach(product => { %>
            <div class="box">
            <div class="trending">
              <% if (product.image) { %>
                <img src="/uploads/<%= product.image %>" alt="<%= product.name %>">
              <% } else { %>
                <p>No Image</p>
              <% } %>
              <h2><%= product.name %></h2>
              <h5>â‚¹<%= product.price %></h5>
              <div class="button">
                <a href="/products/<%=product._id%>">Buy</a>
                <a>Add to Cart</a>
              </div>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <p>No products available</p>
        <% } %>
      </div>
    </div>
  </body>
  <script>
  </script>
</html>
